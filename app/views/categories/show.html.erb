<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-red-800"><%= @category.name %></h1>
    <div>
      <%= link_to 'Edit', edit_category_path(@category), class: "mr-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-yellow-500 hover:bg-white hover:text-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gold-500" %>
      <%= link_to 'Delete', category_path(@category), method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <h2 class="text-xl font-semibold text-gray-800 mb-4">Products in this category</h2>
  
  <% if @category.products.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Selling Price</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @category.products.each do |product| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= link_to product.name, product, class: "text-red-600 hover:text-red-800" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.quantity %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= number_to_currency(product.selling_price) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-500">No products found in this category.</p>
  <% end %>

  <%= link_to 'Back to Categories', categories_path, class: "mt-6 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md hover:text-gray-700 bg-yellow-500 text-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
</div>