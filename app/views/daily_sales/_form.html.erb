<%= form_with(model: daily_sale, local: true) do |form| %>
  <% if daily_sale.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-6">
      <h2 class="text-lg font-bold"><%= pluralize(daily_sale.errors.count, "error") %> prohibited this daily sale from being saved:</h2>

      <ul class="list-disc pl-5">
        <% daily_sale.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4">
      <div>
        <%= form.label :product_id, class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :product_id, @products, :id, :name, { prompt: "Select Product" }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" } %>
      </div>

      <div>
        <%= form.label :date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" %>
      </div>
    </div>

    <div class="space-y-4">
      <div>
        <%= form.label :quantity_sold, "Quantity Sold", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :quantity_sold, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" %>
      </div>
    </div>
  </div>

  <div class="mt-6 flex justify-end">
    <%= link_to 'Cancel', daily_sales_path, class: "mr-3 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>
<% end %>